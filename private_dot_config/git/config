	email = syfertx4yd.qvk@gmail.com
[init]
	defaultBranch = main
[core]
	sshCommmand = "ssh -i $HOME/.ssh/id_ed25519_github -F none"
	#hooksPath = ~/.config/git/hooks
	autocrlf = input
	pager = delta
	#whitespace = 
	fsmonitor = true
	untrackedCache = true
[remote "origin"]
	fetch = +refs/notes/*:refs/notes/*
[status]
	showUntrackedFiles = all
[log]
	abbrevCommit = true
	date = iso
[fetch]
	prune = true
	pruneTags = true
	all = true
[merge]
	conflictstyle = zdiff3
[pull]
	prune = true
	#rebase = true
[push]
	autoSetupRemote = true
	followTags = true
[tag]
	sort = version:refname
[branch]
	sort = -committerdate
[commit]
	verbose = true
[rerere]
	enabled = true
[rebase]
	autoStash = true
	autoSquash = true
[help]
	autocorrect = prompt
[column]
	ui = auto
[interactive]
	diffFilter = delta --color-only
[diff]
	colorMoved = dimmed-zebra
	algorithm = histogram
	mnemonicPrefix = true
	renames = copies
	# TODO: Use neovim instead?
	tool = kitty
	guitool = kitty.gui
[difftool]
	prompt = false
	trustExitCode = true
[difftool "kitty"]
	cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
	cmd = kitty kitty +kitten diff $LOCAL $REMOTE
[delta]
	light = false
	# To jump between files/commits by pressing n/N key. But it doesn't work for me.
	navigate = true
	line-numbers = true
[include]
	# Style for delta
	# `curl -o "$XDG_CONFIG_HOME/git/tokyonight_night.gitconfig" 'https://raw.githubusercontent.com/folke/tokyonight.nvim/main/extras/delta/tokyonight_night.gitconfig'`
	path = tokyonight_night.gitconfig
[alias]
	s = status --short
	st = status #--branch
	df = diff
	dfx = -c delta.side-by-side=true diff
	dft = difftool
	dfg = difftool -g
	stat = diff --stat
	dfs = df --staged
	dfxs = dfx --staged
	dfts = dft --staged
	dfgs = dfg --staged
	stats = stat --staged
	unstage = restore --staged
	unstagep = restore --staged -p
	unstage-all = reset HEAD --
	reset-remote = ! git reset \"origin/$(git branch --show-current)\"
	a = add
	aa = add -A
	adp = add -p
	c = commit
	ca = commit -a
	cm = commit -m
	cam = commit -am
	amend = commit --amend
	aamend = commit -a --amend
	ck = checkout
	br = branch
	bvv = branch -vv
	bra = branch -a
	brr = branch -r
	sw = switch
	sw- = switch -
	swc = switch -c
	ps = push
	psf = push --force-with-lease
	push-notes = push origin refs/notes/*
	pl = pull
	mergeff = -c merge.ff=true merge
	l = log
	graph = log --graph
	oneline = log --pretty='format:%C(auto)%h %Cgreen%>(14,trunc)%cr %Cblue%<|(8)%aN%Creset %s %C(auto)%d'
	ln = oneline
	tree = oneline --graph
	lp = log -p
	logp = log -p
	last = log -1 HEAD
	lastp = last -p
	inicommit = ! git init && git add -A && git commit -m \"init\"
[includeIf "gitdir:~/Projects/Univ/"]
	path = ~/Projects/Univ/.gitconfig
